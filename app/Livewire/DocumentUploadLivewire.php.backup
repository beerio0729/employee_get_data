<?php

namespace App\Livewire;

use Livewire\Component;
use Filament\Schemas\Schema;
use Illuminate\Support\Facades\Auth;
use Filament\Forms\Components\TextInput;
use Filament\Schemas\Contracts\HasSchemas;
use Filament\Forms\Components\MarkdownEditor;
use Filament\Schemas\Concerns\InteractsWithSchemas;

class DocumentUploadLivewire extends Component implements HasSchemas
{
    use InteractsWithSchemas;

    public ?array $data = [];

    public function mount(): void
    {
        $this->form->fill();
    }

    public function form(Schema $schema): Schema
    {
        return $schema
            ->components([
                TextInput::make('name')
                    ->required(),
                TextInput::make('tel'),
                // ...
            ])->columns(2)
            ->statePath('data');
    }

    public function create(): void
    {
        $user = Auth::user();

        // ดึงค่าจาก form
        $formData = $this->form->getState();

        // ตัวอย่างง่ายๆ สมมติว่ามีความสัมพันธ์ documents
        $user->userHasoneEmployee()->updateOrCreate(
            ['user_id' => $user->id], // เงื่อนไขค้นหา
            [
                'name' => $formData['name'],
                'tel' => $formData['tel'] ?? null,
                // ... field อื่นๆ
            ]
        );



        // ส่ง Notification
        \Filament\Notifications\Notification::make()
            ->title('บันทึกเรียบร้อยแล้ว')
            ->success()
            ->send();

        // Redirect ไปลิงก์หลัก (ตัวอย่าง: /dashboard)
        $this->redirect('/');
    }








    public function render()
    {
        return view('livewire.document-upload-livewire');
    }
}
